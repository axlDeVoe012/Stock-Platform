<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>AddStockServlet</servlet-name>
        <servlet-class>za.ac.tut.controller.AddStockServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetEstimatedProfitServlet</servlet-name>
        <servlet-class>za.ac.tut.controller.GetEstimatedProfitServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewStockServlet</servlet-name>
        <servlet-class>za.ac.tut.controller.ViewStockServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetTotalCostServlet</servlet-name>
        <servlet-class>za.ac.tut.controller.GetTotalCostServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddStockServlet</servlet-name>
        <url-pattern>/AddStockServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetEstimatedProfitServlet</servlet-name>
        <url-pattern>/GetEstimatedProfitServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewStockServlet</servlet-name>
        <url-pattern>/ViewStockServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetTotalCostServlet</servlet-name>
        <url-pattern>/GetTotalCostServlet.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
